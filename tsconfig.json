{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": ["dom", "es2015"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
}                                                                                                                                                                                              