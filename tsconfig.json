{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
}