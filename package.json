{
  "name": "react-pinch-and-zoom",
  "version": "1.1.1",
  "author": "Conrad Lo",
  "description": "A react container component with pinch-to-zoom gesture interaction.",
  "keywords": [
    "react",
    "reactjs",
    "pinch",
    "zoom",
    "pan"
  ],
  "files": [
    "lib/"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/conradlo/react-pinch-and-zoom"
  },
  "homepage": "https://github.com/conradlo/react-pinch-and-zoom#readme",
  "bugs": "https://github.com/conradlo/react-pinch-and-zoom/issues",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext .js,.jsx && tslint --project .",
    "lint:fix": "eslint --fix ./src --ext .js,.jsx && tslint --project . --fix",
    "clear:lib": "rimraf lib/",
    "clear:docs": "rimraf docs/",
    "clear:all": "npm run clear:lib && npm run clear:docs",
    "build:lib": "tsc --project .",
    "build:docs": "webpack --config webpack.prod.js",
    "build:all": "npm run build:lib && npm run build:docs",
    "build": "npm run lint:fix && npm run test && npm run clear:all && npm run build:all"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.4",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.4",
    "morgan": "^1.9.1",
    "node-sass": "^4.10.0",
    "prettier": "1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.3.12",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.4"
  },
  "peerDependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "prop-types": "^15.6.2"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
