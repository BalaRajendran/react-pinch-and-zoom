{
  "name": "react-pinch-and-zoom",
  "version": "1.0.1",
  "author": "Conrad Lo",
  "description": "A react container component with pinch-to-zoom gesture interaction.",
  "keywords": [
    "react",
    "reactjs",
    "pinch",
    "zoom",
    "pan"
  ],
  "files": [
    "lib/"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/conradlo/react-pinch-and-zoom"
  },
  "homepage": "https://github.com/conradlo/react-pinch-and-zoom#readme",
  "bugs": "https://github.com/conradlo/react-pinch-and-zoom/issues",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "test": "jest --watch",
    "dev": "concurrently \"npm run lib:watch\" \"npm start\"",
    "lib": "babel src/PinchToZoom -d lib --copy-files",
    "lib:watch": "babel src/PinchToZoom -w -d lib --copy-files",
    "lint": "eslint ./src --ext .js,.jsx",
    "lint:fix": "eslint --fix ./src --ext .js,.jsx",
    "build": "NODE_ENV=production npm run lib && webpack --mode production"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.6.1",
    "css-loader": "^0.28.11",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.4",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.4",
    "morgan": "^1.9.1",
    "node-sass": "^4.10.0",
    "prettier": "1.14.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.3.12",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6",
    "webpack": "^4.25.0",
    "webpack-cli": "^2.1.5",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3"
  },
  "peerDependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "dependencies": {
    "prop-types": "^15.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
